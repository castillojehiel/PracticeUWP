<Application
    x:Class="Appointments.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Appointments">

    <Application.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">1000</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">800</x:Double>

        <Style TargetType="TextBlock" x:Name="txtBlockStyle" >
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Left" />
        </Style>

        <Style TargetType="TextBlock" x:Name="columnTitle" >
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>

        <Style TargetType="TextBlock" x:Name="columnValue" >
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>

        <Style TargetType="TextBlock" x:Name="staticFieldValue">
            <Setter Property="Width" Value="Auto" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        
        <Style TargetType="TextBox" x:Name="txtStyle" >
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="MaxHeight" Value="30" />
            <Setter Property="Padding" Value="2,0,0,0" />
        </Style>

        <Style TargetType="DatePicker" x:Name="pickDateStyle" >
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="MaxHeight" Value="33" />
            <Setter Property="Padding" Value="2,0,0,0" />
        </Style>

    </Application.Resources>

</Application>

